<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.inventory.Calo.s_Drugstore.controller.LoginController"
           prefHeight="600" prefWidth="900" styleClass="root-pane">

    <VBox alignment="CENTER" spacing="0">

        <!-- Main Login Card -->
        <VBox alignment="TOP_CENTER" styleClass="login-card" maxWidth="450" prefHeight="580">

            <!-- Logo/Icon Section -->
            <VBox alignment="CENTER" spacing="15" styleClass="logo-section">
                <StackPane styleClass="logo-container">
                    <Label text="ðŸ’Š" styleClass="logo-icon"/>
                </StackPane>

                <VBox alignment="CENTER" spacing="5">
                    <Label text="PharmaTrack" styleClass="app-title"/>
                    <Label text="Inventory &amp; Sales Management System" styleClass="app-subtitle"/>
                </VBox>
            </VBox>

            <!-- Form Section -->
            <VBox spacing="20" styleClass="form-section">
                <VBox.margin>
                    <Insets top="30"/>
                </VBox.margin>

                <!-- Username Field -->
                <VBox spacing="8">
                    <Label text="Username" styleClass="field-label"/>
                    <TextField fx:id="usernameField" promptText="Enter your username"
                               styleClass="input-field"/>
                </VBox>

                <!-- Password Field -->
                <VBox spacing="8">
                    <Label text="Password" styleClass="field-label"/>
                    <StackPane fx:id="passwordContainer">
                        <PasswordField fx:id="passwordField" promptText="Enter your password"
                                       styleClass="input-field"/>
                        <TextField fx:id="passwordTextField" promptText="Enter your password"
                                   styleClass="input-field"
                                   visible="false" managed="false"/>
                    </StackPane>

                    <!-- Caps Lock Warning -->
                    <Label fx:id="capsLockLabel" text="âš  Caps Lock is ON"
                           styleClass="caps-lock-warning" visible="false">
                        <padding>
                            <Insets top="3"/>
                        </padding>
                    </Label>

                    <!-- Show Password Checkbox -->
                    <CheckBox fx:id="showPasswordCheckBox" text="Show password"
                              styleClass="show-password-checkbox">
                        <padding>
                            <Insets top="5"/>
                        </padding>
                    </CheckBox>
                </VBox>

                <!-- Error/Success Label -->
                <Label fx:id="errorLabel" styleClass="error-label" wrapText="true" visible="false"/>

                <!-- Sign In Button with Loading Indicator -->
                <StackPane>
                    <Button fx:id="signInButton" text="Sign In"
                            styleClass="sign-in-button"
                            onAction="#handleSignIn"
                            maxWidth="Infinity"/>
                    <ProgressIndicator fx:id="loadingIndicator"
                                       styleClass="loading-indicator"
                                       maxHeight="30" maxWidth="30"
                                       visible="false"/>
                </StackPane>

            </VBox>

        </VBox>
    </VBox>

</StackPane>